@namespace AuthPanel
@using TopDeck.Shared.Components
@inherits ProviderButtonBase


<button class="provider-button" 
        style="width: @Width; height: @Height"
        @onclick="Login">

    <HorizontalSpacer Value="5"/>
    <div class="icon">
        <img src="@IconPath" alt="provider button">
    </div>
    <span class="text">@Localizer.Localize(TextKey, $"Sign up with {Provider}")</span>
    <HorizontalSpacer Value="5"/>
    
</button>